<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Profile Page"
			 x:Class="UserRegistrationMPApp.ProfilePage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Your Profile" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="User Name" x:Name="UserNameEntry" />
        <Entry Placeholder="Email" x:Name="EmailEntry" IsEnabled="False" />
        <Entry Placeholder="First Name" x:Name="FirstNameEntry" />
        <Entry Placeholder="Last Name" x:Name="LastNameEntry" />
        <Button Text="Update Profile" Clicked="OnUpdateClicked" />
        <Image Source="background.jpg"/>
    </VerticalStackLayout>
</ContentPage>
