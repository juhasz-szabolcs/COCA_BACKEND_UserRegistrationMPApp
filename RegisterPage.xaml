<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Register Page"
             x:Class="UserRegistrationMPApp.RegisterPage">
    <!--<ContentPage.BackgroundImageSource>background.jpg</ContentPage.BackgroundImageSource>-->
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Create an Account" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="User Name" x:Name="UserNameEntry" />
        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />
        <Entry Placeholder="Confirm Password" IsPassword="True" x:Name="ConfirmPasswordEntry" />
        <Entry Placeholder="First Name" x:Name="FirstNameEntry" />
        <Entry Placeholder="Last Name" x:Name="LastNameEntry" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Image Source="background.jpg"/>
    </VerticalStackLayout>
</ContentPage>
